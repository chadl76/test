
<div class="post-info-wrapper">
	<div class="row post-row">
		<div class="col-xs-4 col-xs-offset-3 post-wrapper">
			<div class="image-name">
			<%= image_tag avatar_url(current_user), :class => "avatar-logo post-avatar-logo", size: "30x30"%><span>
				<h4 class="status-name"><strong><%=link_to current_user.full_name %></strong></h4>
			</span>
		</div>
			<p class="datetime"><%=clean_date(post.created_at)%></p
		<p><%=post.body %></p>

<%unless post.body.nil? %>
	<div class="like-form">
	<%=form_for(post.likes.build) do |f| %>
	<%= f.hidden_field :post, :value => :post %>
	<div class="like-btn"><%=link_to "like", "#", :class => "btn btn-primary"%><span class="glyphicon glyphicon-thumbs-up thumb"></span><span><%=post.likes.count%></span>
		<span>
<%=link_to "Comments", new_post_comment_path(post_id: post.id) %>
 </span>
 	<span><%=link_to "Delete post", post_path(post.id), :method => :delete, :class=> "delete_post"%></span>
	</div>
	<%end %>


	</div>




<br>
<% if post.comments.any? %>
	<%post.comments.each do |c| %>
	<%= c.body %>
	<%= c.author.email %>
	<%= c.created_at %>

	<%end %>
<%end%>

<%end %>
</div>
</div>
</div>
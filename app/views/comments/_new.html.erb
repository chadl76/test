

<div class="row comment-form">
<div class="col-xs-4 col-xs-offset-2" >
<%=form_for(@comment, remote: true, :class=>"comment-form") do |f| %>
	
	<%=f.text_area :body, placeholder: "Provide comment" %>
	<%=f.hidden_field_tag :post_id, post.id %>
	<%=f.hidden_field_tag :author_id, :value => current_user.id %> 

	<%=f.submit "Leave comment" %>

<%end %>
</div>

</div>